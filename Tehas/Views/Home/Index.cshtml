    @Scripts.Render("~/bundles/jcarousellite")
    <!-- ГЛАВНЫЙ СЛАЙДЕР -->

    <script type="text/javascript">
        $(function () {
            $('#slidebox').jCarouselLite({
                vertical: false,
                hoverPause: true,
                btnPrev: ".previous",
                btnNext: ".next",
                visible: 1,
                start: 0,
                scroll: 1,
                circular: true,
                auto: 6000,
                speed: 900,
                btnGo:
				[".1", ".2",
				".3", ".4"],

                afterEnd: function (a, to, btnGo) {
                    if (btnGo.length <= to) {
                        to = 0;
                    }
                    $(".thumbActive").removeClass("thumbActive");
                    $(btnGo[to]).addClass("thumbActive");
                }
            });
        });
    </script>
</head>
